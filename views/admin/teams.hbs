<h1 class="title is-4">Team Management</h1>
<table class="table is-fullwidth is-hoverable">
  <thead>
    <td>Team</td>
    <td>Affiliation</td>
    <td>Emails</td>
    <td>Score</td>
    <td>Actions</td>
    <td>UUID (Server Identifier)</td>
  </thead>
  <tbody>
    {{#each teams}}
      <tr class="team{{#if banned}} banned{{/if}}">
        <td>{{name}}{{#if admin}} {{>adminSymbol}}{{/if}} [{{display_name}}]</td>
        <td>{{affiliation}}</td>
        <td><pre>{{renderEmails emails}}</pre></td>
        <td>{{score}}</td>
        <td>
          {{#if banned}}
            <a href="/admin/unban/{{id}}">Unban</a>
          {{else}}
            <a href="/admin/ban/{{id}}">Ban</a>
          {{/if}}
        </td>
        <td><span>{{id}}</span></td>
      </tr>
    {{/each}}
  </tbody>
</table>