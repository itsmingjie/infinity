<table class="table is-fullwidth is-hoverable">
  <thead>
    <td>Team</td>
    <td>Display</td>
    <td>Affiliation</td>
    <td>Score</td>
    <td>Banned</td>
    <td>Actions</td>
  </thead>
  <tbody>
    {{#each teams}}
    <tr>
      <td title="{{id}}">{{name}}{{#if admin}}{{>adminSymbol}}{{/if}}</td>
      <td>{{display_name}}</td>
      <td>{{affiliation}}</td>
      <td>{{score}}</td>
      <td>{{banned}}</td>
      <td>
        {{#if banned}}
          <a href="/admin/unban/{{id}}">Unban</a>
        {{else}}
          <a href="/admin/ban/{{id}}">Ban</a>
        {{/if}}
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>